<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nunito_medium</item>
    </style>

    <style name="AppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:height">55dp</item>
        <item name="fontFamily">@font/outfit_medium</item>
    </style>

    <style name="AppButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/dark_midnight_blue</item>
        <item name="android:fontFamily">@font/outfit_medium</item>
    </style>

    <style name="AppBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dark_top_round_layout</item>
    </style>

    <!--AppEditTextMaterialLayoutStyle-->
    <style name="AppEditTextMaterialLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="fontFamily">@font/outfit_medium</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">false</item>
        <item name="materialThemeOverlay">@style/AppThemeOverlayTextInputEditTextOutlinedBox</item>
        <item name="editTextStyle">@style/AppEditTextMaterial</item>
        <item name="cursorErrorColor">@color/coral</item>
        <item name="cursorColor">@color/dark_midnight_blue</item>
    </style>

    <style name="AppThemeOverlayTextInputEditTextOutlinedBox">
        <item name="editTextStyle">@style/AppEditTextMaterial</item>
    </style>
    
    <style name="AppEditTextMaterial" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:background">@drawable/custom_input</item>
        <item name="fontFamily">@font/outfit_medium</item>
        <item name="android:inputType">text</item>
        <item name="maxLines">1</item>
        <item name="android:maxLength">99</item>
    </style>

    <!-- Custom MaterialDatePicker Style -->
    <style name="CustomMaterialDatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarStyle">@style/CustomCalendarStyle</item>
    </style>

    <style name="CustomCalendarStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>